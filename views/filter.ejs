    <div class="cusineSection mt-3">
      <div class="cusine-heading">
        <h5>Sort</h5>
        <form action="/api/restaurant/filter" method="get">
          <div class="form-check ftelement">
            <input
              type="radio"
              name="sortOrder"
              id="lowToHigh"
              value="lowToHigh"
            />
            <label for="lowToHigh">Low to High</label>
          </div>
          <div class="form-check ftelement">
            <input
              type="radio"
              name="sortOrder"
              id="highToLow"
              value="highToLow"
            />
            <label for="highToLow">High to Low</label>
          </div>
          <button type="submit" class="btn-primary btn">Apply</button>
        </form>
      </div>
    </div>

    <ul>
      <% restaurants.forEach(restaurant => { %>
      <li>
        <%= restaurant.restaurantName %> - Cuisine: <%= restaurant.cuisine %>,
        Cost: <%= restaurant.costForOne %>
      </li>
      <% }) %>
    </ul>
