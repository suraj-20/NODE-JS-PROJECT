    <div
      class="d-grid gap-3 d-md-flex justify-content-md-end align-items-center"
    >
      <img
        src="<%= user.profileImageURL %>"
        width="50px"
        style="border-radius: 70%"
      />
      <p class="navbar-brand" style="align-items: center; margin: 0%">
        <%= user.name %>
      </p>
      <a class="btn btn-primary" href="/user/login">Logout</a>
    </div>
    <% } else { %>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <a class="navbar-brand" href="/user/login">Login</a>
      <a class="navbar-brand" href="/user/signup">Signup</a>
    </div>
    <% } %>
  </div>
